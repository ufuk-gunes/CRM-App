@model Teklif
@{
    ViewData["Title"] = ViewBag.ActionMode; ;
}

<div class="m-4">
    <div class="bg-success text-white p-4">
        <h2>Teklif Ekle / Düzenle</h2>
    </div>
    <form asp-action="@(ViewBag.ActionMode)" method="post">
        <input type="hidden" name="original.Id" value="@Model.Id" />
        <input type="hidden" name="original.Name" value="@Model.TeklifAdi" />
        <div class="row">
            <div class="col-6">
                <div class="bg-primary text-white p-2 mt-3">
                    Teklif Bilgileri
                </div>
                <div class="form-group">
                    <label>Teklif Adı</label>
                    <input asp-for="TeklifAdi" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Başlangıç Tarihi</label>
                    <input asp-for="BasTarih" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Bitiş Tarihi</label>
                    <input asp-for="BitTarih" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Personel</label>
                    <input asp-for="Personel" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Müşteri</label>
                    <input asp-for="Musteri" class="form-control" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>


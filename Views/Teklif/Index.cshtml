@model IEnumerable<Teklif>
@{
    ViewData["Title"] = "Index";
}
<div>

</div>
<div class="m-4">
    <div class="bg-success text-white p-4">
        <h2>Teklif Listesi</h2>
    </div>
    <div class="card my-2">
        <div class="card-body">
            <form method="get" id="filter">
                <div class="form-group">
                    <input name="name" class="form-control" placeholder="Teklif Adı" value="@ViewBag.name" />
                </div>
                <button class="btn btn-primary">
                    Arama Yap
                </button>
            </form>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Teklif Adı</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Personel</th>
                <th>Müşteri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TeklifAdi</td>
                    <td>@item.BasTarih</td>
                    <td>@item.BitTarih</td>
                    <td>@item.Personel</td>
                    <td>@item.Musteri</td>

                    <td>
                        <form asp-action="Delete" method="post">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm btn-del">Sil</button>

                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Yeni Kayıt</a>
</div>

@model Stok
@{
    ViewData["Title"] = ViewBag.ActionMode; ;
}

<div class="m-4">
    <div class="bg-success text-white p-4">
        <h2>Stok Ekle / Düzenle</h2>
    </div>
    <form asp-action="@(ViewBag.ActionMode)" method="post">
        <input type="hidden" name="original.Id" value="@Model.Id" />
        <input type="hidden" name="original.Name" value="@Model.Urun" />
        <div class="row">
            <div class="col-6">
                <div class="bg-primary text-white p-2 mt-3">
                    Stok Bilgileri
                </div>
                <div class="form-group">
                    <label>Ürün</label>
                    <br />
                    @Html.DropDownListFor(x => x.UrunId, new SelectList(ViewBag.Urunler, "Id", "UrunAdi"), "Ürün Seçiniz...", new { @class = "form-control" })
                    @*<input asp-for="Kategori" class="form-control" />*@
                </div>
                <div class="form-group">
                    <label>Stok Adedi</label>
                    <input asp-for="StokAdet" class="form-control" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

